@model Art_Gallery.Controllers.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <meta name="author" content="Group 3">
    <link rel="icon" href="~/Content/webapp/images/favicon.png" type="image/x-icon">
    <link rel="icon" href="~/Content/webapp/images/favicon.png" type="image/x-icon">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Remix Icon CSS -->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/webapp/css/loginstyle.css">
</head>

<body>
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        <div class="login">
            <img src="~/Content/webapp/images/slide02.jpg" alt="login image" class="login__img">
            <div class="login__form">
                <h1 class="login__title">Welcome to <a href="@Url.Action("", "Home")"><img src="~/Content/webapp/images/logo.png"></a></h1>
                <div class="login__content">
                    <div class="login__box">
                        <i class="ri-user-3-line login__icon"></i>
                        <div class="login__box-input">
                            @Html.TextBoxFor(model => model.Email, new { @class = "login__input", @placeholder = " ", required = "required" })
                            @Html.LabelFor(model => model.Email, new { @class = "login__label" })
                        </div>

                    </div>
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    <div class="login__box">
                        <i class="ri-lock-2-line login__icon"></i>
                        <div class="login__box-input">
                            @Html.PasswordFor(model => model.Password, new { @class = "login__input", @placeholder = " ", required = "required" })
                            @Html.LabelFor(model => model.Password, new { @class = "login__label" })
                            <i class="ri-eye-off-line login__eye" id="login-eye"></i>
                        </div>

                    </div>
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
                <div class="login__check">
                    <div class="login__check-group">
                        <input type="checkbox" class="login__check-input" id="login-check">
                        <label for="login-check" class="login__check-label">Remember me</label>
                    </div>
                    <h5><a href="#" class="login__forgot">Forgot Password?</a></h5>
                </div>
                <button type="submit" class="login__button">Login</button>
                <h5 class="login__register">
                    New user? <a href="@Url.Action("Index", "Register")">Register</a>
                </h5>
            </div>
        </div>
    }

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="~/Content/webapp/js/login.js"></script>
</body>

</html>