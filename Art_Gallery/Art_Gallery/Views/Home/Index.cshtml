@model Art_Gallery.Controllers.HomeViewModel
@{
    ViewBag.Title = "Art Gallery";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <header class="slider">
        <div class="swiper-container slider-images">
            <div class="swiper-wrapper">
                <div class="swiper-slide" data-background="~/Content/webapp/images/slide01.jpg">
                    <div class="mobile-slide" data-background="~/Content/webapp/images/slide01.jpg"></div>
                </div>
                <div class="swiper-slide" data-background="~/Content/webapp/images/slide02.jpg">
                    <div class="mobile-slide" data-background="~/Content/webapp/images/slide02.jpg"></div>
                </div>
                <div class="swiper-slide" data-background="~/Content/webapp/images/slide03.jpg">
                    <div class="mobile-slide" data-background="~/Content/webapp/images/slide03.jpg"></div>
                </div>
            </div>
            <div class="container-fluid slider-nav">
                <div class="swiper-pagination"></div>
                <div class="swiper-fraction"></div>
                <div class="button-prev"><i class="far fa-chevron-down"></i></div>
                <div class="button-next"><i class="far fa-chevron-up"></i></div>
            </div>
        </div>
        <div class="swiper-container slider-texts">
            <svg width="580" height="400" class="svg-morph">
                <path id="svg_morph" d="m261,30.4375c0,0 114,6 151,75c37,69 37,174 6,206.5625c-31,32.5625 -138,11.4375 -196,-19.5625c-58,-31 -86,-62 -90,-134.4375c12,-136.5625 92,-126.5625 129,-127.5625z" />
            </svg>
            <div class="swiper-wrapper">
                <div class="swiper-slide">
                    <div class="container-fluid">
                        <h1>Art Gallery </h1>
                        <p>
                            Explore hundreds of Art Gallery, galleries and
                            historic <br>
                            places across the World.
                        </p>
                    </div>
                    <!-- end container -->
                </div>
                <!-- end swiper-slide -->
                <div class="swiper-slide">
                    <div class="container-fluid">
                        <h1>
                            Discover Our <br>
                            History
                        </h1>
                        <p>
                            Your support is vital and helps the Art Gallery to share <br>
                            the collection with the world.
                        </p>
                    </div>
                    <!-- end container -->
                </div>
                <!-- end swiper-slide -->
                <div class="swiper-slide">
                    <div class="container-fluid">
                        <h1>
                            The Art of <br>
                            North Africa
                        </h1>
                        <p>
                            Curator Peter Loovers explores the special relationship between<br>
                            Arctic Peoples and 'man's best friend'.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </header>
    @if (Model.AuctionLive != null)
    {
        <section class="content-section" data-background="#fffbf7">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-12">
                        <div class="section-title text-center">
                            <figure><img src="~/Content/webapp/images/title-shape.png" alt="Image"></figure>
                            <h2>
                                The auction is<br>
                                underway
                            </h2>
                        </div>
                        <!-- end section-title -->
                    </div>
                    <!-- end col-12 -->
                    <div class="col-lg-7">
                        <figure class="image-box" data-scroll data-scroll-speed="-1"> <img src="~/Content/uploads/@Model.AuctionLive.Auction.Image" alt="Image"> </figure>
                    </div>
                    <!-- end col-7 -->
                    <div class="col-lg-5">
                        <div class="side-icon-list right-side">
                            <ul>
                                <li>
                                    <div class="content">
                                        <h5>@Model.AuctionLive.Auction.AuctionName</h5>
                                        <p>
                                            Start Date: @Model.AuctionLive.Auction.StartDate <br>
                                            End Date: @Model.AuctionLive.Auction.EndDate <br>
                                            Quantity of Artwork: @Model.AuctionLive.Artworks.Count
                                        </p>

                                    </div>
                                    <!-- end content -->
                                </li>
                                <div class="col-lg-3"> <a href="@Url.Action("", "AuctionArtworkLive", new {id=Model.AuctionLive.Auction.AuctionId})" class="circle-button">Live now</a> </div>
                            </ul>
                        </div>
                        <!-- end side-icon-list -->
                    </div>
                    <!-- end col-5 -->
                </div>
                <!-- end row -->
            </div>
            <!-- end container -->
        </section>
    }

    @if (Model.ProposedAuction != null)
    {
        <section class="content-section">
            <div class="container">
                <div class="row ">
                    <div class="col-lg-9">
                        <div class="section-title">
                            <figure><img src="~/Content/webapp/images/title-shape.png" alt="Image"></figure>
                            <h6>DON’T MISS THE OPPORTUNITY</h6>
                            <h2>Proposed auction</h2>
                        </div>
                        <!-- end section-title -->
                    </div>
                    <!-- end col-9 -->
                    <!-- end col-3 -->
                </div>
                <!-- end row -->

                <div class="container pl-2 pr-2 border mb-5">
                    <div class="p-2">
                        <h4 class="fm-cinzel"><a href="@Url.Action("", "AuctionArtwork")">@Html.DisplayFor(modelItem => modelItem.ProposedAuction.Auction.AuctionName)</a></h4>
                    </div>
                    <div class="d-flex justify-content-around p-2 border-top border-bottom">
                        <div class="text-center">
                            <p class="opacity-70">Start Date</p>
                            <p class="fz-20">@Html.DisplayFor(modelItem => modelItem.ProposedAuction.Auction.StartDate)</p>
                        </div>
                        <div class="text-center">
                            <p class="opacity-70">End Date</p>
                            <p class="fz-20">@Html.DisplayFor(modelItem => modelItem.ProposedAuction.Auction.EndDate)</p>
                        </div>
                        <div class="text-center">
                            <p class="opacity-70">Quantity of Artwork</p>
                            <p class="fz-20">@Html.DisplayFor(modelItem => modelItem.ProposedAuction.ArtworksAll.Count)</p>
                        </div>
                    </div>
                    <div class="pl-2 pr-2 pt-5 pb-5">
                        <div class="container">
                            <div class="row justify-content-center">

                                @foreach (var item in Model.ProposedAuction.Artworks)
                                {
                                    <div class="col-lg-4 col-md-6 d-flex align-items-center">
                                        <div class="aution-box">
                                            <figure>
                                                <a href="@Url.Action("", "AuctionArtworkDetail", new {id=item.ArtworkId})"><img src="~/Content/uploads/@item.Image" alt="Image" class="img"></a>
                                            </figure>
                                            <div class="content-box">
                                                <h4>
                                                    <a href="@Url.Action("", "AuctionArtworkDetail", new {id=item.ArtworkId})">
                                                        @item.Name
                                                    </a>
                                                </h4>
                                                <p>Start Price: @item.Price</p>
                                            </div>
                                        </div>
                                    </div>

                                }


                            </div>
                        </div>
                    </div>
                </div>
                <!-- end container -->
        </section>
    }
    @if (Model.NewArtworks != null)
    {
        <section class="content-section no-bottom-spacing bottom-white" data-background="#fffbf7">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="section-title text-center">
                            <figure><img src="~/Content/webapp/images/title-shape.png" alt="Image"></figure>
                            <h6>Artwork</h6>
                            <h2>New Artwork</h2>
                        </div>
                        <!-- end section-title -->
                    </div>
                    <div data-scroll data-scroll-speed="1">
                        <div class="art-list">
                            <div class="swiper-wrapper">
                                @foreach (var item in Model.NewArtworks)
                                {
                                    <div class="swiper-slide">
                                        <div class="art-box">
                                            <a href="@Url.Action("", "ArtworkDetail", new {id = item.ArtworkId})">
                                                <div class="art-img">
                                                    <img src="~/Content/uploads/@item.Image" alt="">
                                                </div>
                                                <div class="art-content">
                                                    <p class="category-label">@item.CategoryName</p>
                                                    <h6>@item.Name</h6>
                                                    <p>@item.ArtistName</p>
                                                    <p class="price">@item.Price</p>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="swiper-pagination"></div>
                        </div>
                    </div>

                </div>
                <!-- end row -->
            </div>
            <!-- end container -->
            <div class="clearfix spacing-100"></div>
            <div class="horizontal-scroll">
                <div class="scroll-inner" data-scroll data-scroll-direction="horizontal" data-scroll-speed="5">
                    <div class="scroll-wrapper">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-3">
                                    <figure class="image-box" data-scroll data-scroll-speed="0"> <img src="~/Content/webapp/images/image01.jpg" alt="Image"> </figure>
                                </div>
                                <!-- end col-3 -->
                                <div class="col-md-4 offset-md-1">
                                    <figure class="image-box" data-scroll data-scroll-speed="0"> <img src="~/Content/webapp/images/image02.jpg" alt="Image"> </figure>
                                </div>
                                <!-- end col-3 -->
                                <div class="col-md-2 offset-md-1">
                                    <figure class="image-box" data-scroll data-scroll-speed="0"> <img src="~/Content/webapp/images/image03.jpg" alt="Image"> </figure>
                                </div>
                                <!-- end col-3 -->
                            </div>
                            <!-- end row -->
                        </div>
                        <!-- end container-fluid -->
                    </div>
                    <!-- end scroll-wrapper -->
                    <div class="scroll-wrapper">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-3">
                                    <figure class="image-box" data-scroll data-scroll-speed="0"> <img src="~/Content/webapp/images/image01.jpg" alt="Image"> </figure>
                                </div>
                                <!-- end col-3 -->
                                <div class="col-md-4 offset-md-1">
                                    <figure class="image-box" data-scroll data-scroll-speed="0"> <img src="~/Content/webapp/images/image02.jpg" alt="Image"> </figure>
                                </div>
                                <!-- end col-3 -->
                                <div class="col-md-2 offset-md-1">
                                    <figure class="image-box" data-scroll data-scroll-speed="0"> <img src="~/Content/webapp/images/image03.jpg" alt="Image"> </figure>
                                </div>
                                <!-- end col-3 -->
                            </div>
                            <!-- end row -->
                        </div>
                        <!-- container-fluid -->
                    </div>
                    <!-- end scroll-wrapper -->
                </div>
                <!-- end scroll-inner -->
            </div>
            <!-- end horizontal-scroll -->
        </section>

    }
    @if (Model.SaleArtworks != null)
    {
        <section class="content-section no-bottom-spacing bottom-white" data-background="#fffbf7">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="section-title text-center">
                            <figure><img src="~/Content/webapp/images/title-shape.png" alt="Image"></figure>
                            <h6>Artwork</h6>
                            <h2>Sale Artwork</h2>
                        </div>
                        <!-- end section-title -->
                    </div>
                    <div data-scroll data-scroll-speed="1">
                        <div class="art-list">
                            <div class="swiper-wrapper">
                                @foreach (var item in Model.SaleArtworks)
                                {
                                    <div class="swiper-slide">
                                        <div class="art-box">
                                            <a href="@Url.Action("", "ArtworkDetail", new {id = item.ArtworkId})">
                                                <div class="art-img">
                                                    <img src="~/Content/uploads/@item.Image" alt="">
                                                </div>
                                                <div class="art-content">
                                                    <p class="category-label">@item.CategoryName</p>
                                                    <h6>@item.Name</h6>
                                                    <p>@item.ArtistName</p>
                                                    <p class="price">@item.Price</p>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="swiper-pagination"></div>
                        </div>
                    </div>

                </div>
                <!-- end row -->
            </div>
        </section>
    }
    @if (Model.Artists != null)
    {
        <section class="content-section">
            <div class="container">
                <div class="row g-0 align-items-center">
                    <div class="col-lg-6">
                        <div class="art-slider">
                            <div class="titles">
                                <h6>Artist</h6>
                                <h2>Author</h2>
                            </div>
                            <!-- end titles -->
                            <div class="swiper-container art-slider-content">
                                <div class="swiper-wrapper">
                                    @foreach (var item in Model.Artists)
                                    {
                                        <div class="swiper-slide">
                                            <span>@Html.DisplayFor(modelItem => item.ArtistId)</span>
                                            <h3>
                                                @Html.DisplayFor(modelItem => item.ArtistName)
                                            </h3>
                                        </div>
                                    }
                                    <!-- end swiper-slide -->
                                </div>
                                <!-- end swiper-wrapper -->
                            </div>
                            <!-- end art-slider-content -->
                        </div>
                        <!-- end art-slider -->
                    </div>
                    <!-- end col-6 -->
                    <div class="col-lg-6">
                        <div class="art-slider" data-scroll data-scroll-speed="1">
                            <div class="swiper-container art-slider-images">
                                <div class="swiper-wrapper">
                                    @foreach (var item in Model.Artists)
                                    {
                                        <div class="swiper-slide"> <img src="~/Content/uploads/@Html.DisplayFor(modelItem => item.Image)" alt="Image"> </div>
                                    }
                                    <!-- end swiper-slide -->
                                </div>
                                <!-- end swiper-wrapper -->
                            </div>
                            <!-- end art-slider-images -->
                        </div>
                        <!-- end art-slider -->
                    </div>
                    <!-- end col-6 -->
                </div>
                <!-- end row -->
            </div>
            <!-- end container -->
        </section>
    }
    @if (Model.News != null)
    {
        <section class="content-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="section-title text-center">
                            <figure><img src="~/Content/webapp/images/title-shape.png" alt="Image"></figure>
                            <h6>Get Latest Updates and News</h6>
                            <h2>Recent News</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    @foreach (var item in Model.News)
                    { 
                        <div class="col-12">
                            <div class="recent-news">
                                <div class="content-box">
                                    <small>@item.CreateDate</small>
                                    <h3>
                                        @item.Title
                                    </h3>
                                    <p>
                                        @item.Description
                                    </p>
                                    <a href="@Url.Action("", "NewDetail", new { id = item.NewId })" class="custom-link">Continue reading</a>
                                </div>
                                <figure data-scroll data-scroll-speed="-1"><img src="~/Content/uploads/@item.Image" alt="Image"></figure>
                            </div>
                        </div>
                    }
                        <div class="col-12 text-center">
                            <a href="@Url.Action("", "News")" class="circle-button">
                                SEE ALL<br>
                                NEWS
                            </a>
                        </div>
                    </div>
            </div>
        </section>
    }

</main>