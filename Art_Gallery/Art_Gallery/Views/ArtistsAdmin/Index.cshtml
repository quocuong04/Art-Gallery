@model IEnumerable<Art_Gallery.Models.Artist>

@{
    ViewBag.Title = "Artists Admin Page";
}
@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Artist Management</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Artist <a href="@Url.Action("Create", "ArtistsAdmin")"><i class="fas fa-plus-circle"></i></a></h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ArtistName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nationality)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Image)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ArtistName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nationality)
                                </td>
                                <td>
                                    <img width="50" src="~/Content/uploads/@Html.DisplayFor(modelItem => item.Image)" />
                                </td>
                                <td>
                                    <a href="@Url.Action("Delete", "ArtistsAdmin", new { id = item.ArtistId })"><i class="fas fa-trash-alt"></i></a>
                                    <a href="@Url.Action("Edit", "ArtistsAdmin", new { id = item.ArtistId })"><i class="fas fa-edit"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

