@model IEnumerable<Art_Gallery.Models.Review>

@{
    ViewBag.Title = "Reviews Admin Page";
}
@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Review Management</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Review</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Artwork.Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Customer.Email)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Artwork.Status)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Customer.Email)
                                </td>
                                <td>
                                    <a href="@Url.Action("Delete", "ReviewsAdmin", new { id = item.ReviewId })"><i class="fas fa-trash-alt"></i></a>
                                    <a href="@Url.Action("Edit", "ReviewsAdmin", new { id = item.ReviewId })"><i class="fas fa-edit"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
