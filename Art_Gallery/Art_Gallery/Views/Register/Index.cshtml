@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Page</title>
    <meta name="author" content="Group 3">
    <link rel="icon" href="~/Content/webapp/images/favicon.png" type="image/x-icon">
    <link rel="icon" href="~/Content/webapp/images/favicon.png" type="image/x-icon">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Remix Icon CSS -->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/webapp/css/registerstyle.css">
</head>

<body>
    @using (Html.BeginForm("Create", "Register", FormMethod.Post))
    {
        <div class="register">
            <img src="~/Content/webapp/images/slide02.jpg" alt="register image" class="register__img">
            <div class="register__form">
                <h1 class="register__title">Register <a href="@Url.Action("", "Home")"><img src="~/Content/webapp/images/logo.png"></a></h1>
                <div class="register__content">
                    <div class="register__box">
                        <i class="ri-mail-line register__icon"></i>
                        <div class="register__box-input">
                            <input type="text" name="email" required class="register__input" id="register-email" placeholder=" ">
                            <label for="register-email" class="register__label">Email</label>
                            <span class="text-danger" data-valmsg-for="email"></span>
                        </div>
                    </div>
                    <div class="register__box">
                        <i class="ri-user-3-line register__icon"></i>
                        <div class="register__box-input">
                            <input type="text" name="fullname" required class="register__input" id="register-name" placeholder=" ">
                            <label for="register-name" class="register__label">Full Name</label>
                        </div>
                    </div>
                    <div class="register__box">
                        <i class="ri-phone-fill register__icon"></i>
                        <div class="register__box-input">
                            <input type="tel" required name="phonenumber" class="register__input" id="register-phone" placeholder=" ">
                            <label for="register-phone" class="register__label">Phone</label>
                        </div>
                    </div>
                    <div class="register__box">
                        <i class="ri-phone-fill register__icon"></i>
                        <div class="register__box-input">
                            <input type="text" required name="address" class="register__input" id="register-address" placeholder=" ">
                            <label for="register-address" class="register__label">Address</label>
                        </div>
                    </div>
                    <div class="register__box">
                        <i class="ri-lock-2-line register__icon"></i>
                        <div class="register__box-input">
                            <input type="password" required name="password" class="register__input" id="register-pass" placeholder=" ">
                            <label for="register-pass" class="register__label">Password</label>
                            <i class="ri-eye-off-line register__eye" id="register-eye"></i>
                        </div>
                    </div>
                    <div class="register__box">
                        <i class="ri-lock-2-line register__icon"></i>
                        <div class="register__box-input">
                            <input type="number" required name="age" class="register__input" min="0" id="register-age" placeholder=" ">
                            <label for="register-age" class="register__label">Age</label>
                        </div>
                    </div>
                    <div class="register__box">
                        <i class="ri-lock-2-line register__icon"></i>
                        <div class="register__box-input">
                            <input type="text" required name="sex" class="register__input" id="register-sex" placeholder=" " />
                            <label for="register-sex" class="register__label">Sex</label>
                        </div>
                    </div>
                </div>
                <button type="submit" class="register__button">Register</button>
                <h5 class="register__login">
                    Already have an account? <a href="@Url.Action("", "Login")">Login</a>
                </h5>
            </div>
        </div>
    }

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="~/Content/webapp/js/register.js"></script>
</body>

</html>