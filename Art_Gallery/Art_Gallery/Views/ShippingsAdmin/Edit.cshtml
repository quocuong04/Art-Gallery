@model Art_Gallery.Models.Shipping

@{
    ViewBag.Title = "Edit Shippings Page";
}
@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

