@model Art_Gallery.Models.Shipping

@{
    ViewBag.Title = "Edit Shippings Page";
}
@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal p-3">
    <h4>Shipping</h4>
